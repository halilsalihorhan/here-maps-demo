{
  "version": 2,
  "builds": [
    { "src": "*.html", "use": "@vercel/static" },
    { "src": "server.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/", "dest": "/index.html" },
    { "src": "/restriction.html", "dest": "/restriction.html" },
    { "src": "/restriction", "dest": "/restriction.html" },
    { "src": "/(.+)", "dest": "/$1" }
  ],
  "env": {
    "NODE_ENV": "production"
  }
} 